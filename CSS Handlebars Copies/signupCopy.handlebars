{{!-- Sign Up if new --}}
<h1>Sign up</h1>
<form action="/signup" method="post">
    <section class="mt-2 mb-3">
        <div class="form-floating">
            <input id="username" class="form-control col-6" name="username" type="text" autocomplete="username" required>
            <label for="username">Username</label>
        </div>
    </section>
    <section class="mb-3">
        <div class="form-floating">
            <input id="email" class="form-control col-6" name="email" type="text" autocomplete="email" required>
            <label for="email">Email</label>
        </div>
    </section>
    <section class="mb-3">
        <div class="form-floating">
            <input id="new-password" class="form-control col-6" name="password" type="password" autocomplete="new-password" required>
            <label for="new-password">Password</label>
        </div>
    </section>
    <button type="submit" class="btn btn-info btn-lg">Sign up</button>
</form>